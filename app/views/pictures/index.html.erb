<h1>Listing pictures</h1>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>Description</th>
      <th>User</th>
      <th>Album</th>
      <th>Content type</th>
      <th>Width</th>
      <th>Height</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.caption %></td>
        <td><%= picture.description %></td>
        <td><%= picture.user %></td>
        <td><%= picture.album %></td>
        <td><%= picture.content_type %></td>
        <td><%= picture.width %></td>
        <td><%= picture.height %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
