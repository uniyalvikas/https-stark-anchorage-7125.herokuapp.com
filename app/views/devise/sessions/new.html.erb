<h6 class="alert alert-info">Log in to Web Album....</h6>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
<div class="col-lg-6 col-lg-offset-3 panel panel-default">
  <div class="field" style="margin-top:10px;">
   
    <%= f.email_field :email, autofocus: true ,class: "form form-control", placeholder: "Enter Email" %>
  </div>

  <div class="field">

    <%= f.password_field :password, autocomplete: "off",class: "form form-control", placeholder: "password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" ,class: "btn btn-sm btn-info" %>
  </div>
<% end %>
<div class="pull-right">
<%= render "devise/shared/links"%>
</div>
</div>

